<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.justyna.its_app.WelcomeActivity">

    <Button
        android:id="@+id/roomLocationBtn"
        android:layout_width="267dp"
        android:layout_height="62dp"
        android:text="Room Location"
        android:background="@color/button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/roomAvabilityBtn" />

    <Button
        android:id="@+id/roomAvabilityBtn"
        android:layout_width="267dp"
        android:layout_height="62dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="21dp"
        android:text="Room Availability"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timetableBtn" />

    <Button
        android:id="@+id/timetableBtn"
        android:layout_width="267dp"
        android:layout_height="62dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Timetable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        android:background="@color/button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="127dp" />

</android.support.constraint.ConstraintLayout>
